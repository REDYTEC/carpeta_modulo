<?xml version="1.0" ?>
<odoo>

    <record id="view_buscar_wizard_form" model="ir.ui.view">
        <field name="name">buscar.wizard.form</field>
        <field name="model">buscar.wizard</field>
        <field name="arch" type="xml">
            <form string="Buscar">
                <group>
                    <field name="cadena_texto"/>
                </group>
                <footer>
                    <button name="action_search_m1" type="object" string="Search Appointments (M1)"
                    class="btn-primary"/>
                    <button name="action_search_m2" type="object" string="Search Appointments (M1)"
                    class="btn-primary"/>
                    <button name="action_search_m3" type="object" string="Search Appointments (M1)"
                    class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_buscar" model="ir.actions.act_window">
        <field name="name">Buscar Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">buscar.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_buscar_wizard_form"/>
        <field name="target">new</field>
    </record>

</odoo>
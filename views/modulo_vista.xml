<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_modulo_kanban" model="ir.ui.view">
        <field name="name">nombre.modulo.kanban</field>
        <field name="model">nombre.modulo</field>
        <field name="arch" type="xml">
            <kanban default_order="id asc">
                <field name="cadena_texto"/>
                <field name="numero_entero"/>
                <field name="numero_puntos_decimales"/>
                <field name="variable_boleana"/>
                <field name="texto_largo"/>
                <field name="seleccion"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        <strong>
                                            ID:
                                            <field name="name"/>
                                        </strong>
                                    </li>
                                    <li>
                                        Cadena de Texto:
                                        <field name="cadena_texto"/>
                                    </li>
                                    <li>
                                        Número Entero:
                                        <field name="numero_entero"/>
                                    </li>
                                    <li>
                                        Número con Decimales:
                                        <field name="numero_puntos_decimales"/>
                                    </li>
                                    <li>
                                        Selección:
                                        <field name="seleccion"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_modulo_tree" model="ir.ui.view">
        <field name="name">nombre.modulo.tree</field>
        <field name="model">nombre.modulo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="cadena_texto"/>
                <field name="numero_entero" optional="hide"/>
                <field name="numero_puntos_decimales" optional="show"/>
                <field name="variable_boleana"/>
                <field name="texto_largo"/>
                <field name="seleccion"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_modulo_form" model="ir.ui.view">
        <field name="name">nombre.modulo.form</field>
        <field name="model">nombre.modulo</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id="button_confirm" name="action_confirm" string="Confirmar" class="btn-primary"
                            states="draft" confirm="Desea confirmar?" type="object"/>
                    <button id="button_done" name="action_done" string="Marcar Hecho" class="btn-primary"
                            states="confirm" type="object"/>
                    <button id="button_draft" name="action_draft" string="Hacer Borrador" class="btn-primary"
                            states="cancel" type="object"/>
                    <button id="button_cancel" name="action_cancel" string="Cancelar" states="draft,done,confirm"
                            confirm="Seguro que desea cancelar?" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done,confirm"/>
                </header>
                <sheet>
                    <div class="oe_tittle">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="group_left">
                            <field name="cadena_texto"/>
                            <field name="numero_entero"/>
                            <field name="numero_puntos_decimales"/>
                            <field name="variable_boleana"/>
                        </group>
                        <group name="group_left">
                            <field name="texto_largo"/>
                            <field name="seleccion"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Uno U Otro" name="one_or_the_other">
                            <group>
                                <field name="uno" attrs="{'invisible': [('dos','=',True)]}"/>
                                <field name="dos" attrs="{'invisible': [('uno','=',True)]}"/>
                            </group>
                        </page>
                        <page string="Extra Info" name="extra_info">
                            <group string="Notas">
                                <field name="notas"/>
                                <group string="Fecha">
                                    <field name="fecha"/>
                                    <field name="fecha_y_hora"/>
                                </group>
                                <group string="Estado">

                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_nombre_modulo" model="ir.actions.act_window">
        <field name="name">Nombre</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">nombre.modulo</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Comentario cuando no hay info guardada.
            </p>
        </field>
    </record>

    <menuitem id="menu_1"
              name="Nombre 1"/>

    <menuitem id="menu_1_1"
              name="Nombre 1.1"
              parent="menu_1"/>

    <menuitem id="menu_1_1_1"
              name="Nombre 1.1.1"
              parent="menu_1_1"
              action="action_nombre_modulo"/>

</odoo>